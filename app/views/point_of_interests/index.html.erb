<p id="notice"><%= notice %></p>

<h1>Point Of Interests</h1>


<%= paginate @point_of_interests %>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>Rating</th>
    <th>Reviews</th>
    <th>Tags</th>
    <th>Date of creation</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @point_of_interests.each do |point_of_interest| %>
      <tr>
        <td><%= point_of_interest.default_name %></td>
        <td><%= point_of_interest.city.try(:name) %></td>
        <td><%= point_of_interest.rating %></td>
        <td><%= point_of_interest.reviews.count %></td>
        <td>
          <% point_of_interest.tags.each do |tag| %>
              <span class="tag"><%= tag.name %></span>
          <% end %>
        </td>
        <td><%= l point_of_interest.created_at %></td>
        <td><%= link_to 'Show', point_of_interest %></td>
        <td><%= link_to 'Edit', edit_point_of_interest_path(point_of_interest) %></td>
        <td><%= link_to 'Destroy', point_of_interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Point of interest', new_point_of_interest_path %>
